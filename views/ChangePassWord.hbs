                    {{/if}}
                    <form class="formDkyTV" action="http://localhost:5000/ChangePassWord" method="POST" >
                        <div class="form-group">
                                <label for="exampleInputPassword1">Mật Khẩu Cũ</label>
                                <input type="password" name="oldpass" class="form-control" id="exampleInputPassword1" >
                        </div>
                        <div class="form-group ">
                                <label for="exampleInputPassword1">Mật Khẩu Mới</label>
                                <input type="password" name="newpass" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group ">
                                <label for="exampleInputPassword1">Xác Nhận Mật Khẩu Mới</label>
                                <input type="password" name="checknewpass" class="form-control" id="exampleInputPassword1">
                        </div>

                        <button type="submit" class="btn btn-primary float-right">Đổi Mật Khẩu</button>
                    
                    </form>
                </div>
            </div>
        </div>
