<section id="mainAdmin">
        <div class="container" style="margin-top : 50px">
            <div class="row">
                <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <div class="row">
                        <div class="col">
                            <p><i class="fas fa-bars"></i>Tùy chọn</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <ul class="list-group">
                                <li class="list-group-item"><a href="/Staff" >Thông tin chi tiết</a> </li>
                                <li class="list-group-item"><a href="/ChangePassWord" >Đổi Mật Khẩu</a> </li>
                                <li class="list-group-item"><a href="/Sign_up_ThanhVien" >Đăng ký Thành viên</a> </li>
                                <li class="list-group-item"><a href="/NhapSach">Nhập sách</a> </li>
                                <li class="list-group-item"><a href="/XoaSach">Chỉnh sửa sách</a> </li>
                                <li class="list-group-item"><a href="/Account" style="color: Black;">Chỉnh sửa độc giả</a> </li>
                                <li class="list-group-item"><a href="/DangKyMuonSach">Đăng ký mượn sách</a> </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-9 col-sm-9 col-md-9 col-lg-9 col-xl-9">
                    <div class="mucTongQuan" style="margin-bottom: 25px">
                        <h3>Danh sách độc giả</h3>
                    </div>
                    <div class="row quanLyHienThiThongTin" style="margin-bottom: 25px">
                        <form class="form-inline mx-auto" action="http://localhost:5000/Account" method="POST">
                            <input class="form-control formSearch" type="text" id="hotensearch" name="hotensearch" placeholder="Họ và tên người cần tìm" style="padding-right: 60px;">
                            <button class="btn btn-outline-success " type="submit" style="margin-left: 0px;">Tìm kiếm</button>
                        </form>
                    </div>
                    {{#if message}}
                        <div class="alert {{messageclass}}"> {{message}}</div>
                    {{/if}}
                    <div class="wrap">
                        <table class="head">
                            <tbody>
                            <tr>
                                <th style=" width: 15%">Số thứ tự</th>
                                <th style="width:30%">Họ và tên</th>
                                <th style="">Ngày đăng ký</th>
                                <th style="">Tùy chỉnh</th>
                            </tr>
                            </tbody>
                        </table>
                        <div class="scroll-table">
                            <table class="table bangNhanVien">
                                <tbody>
                                    {{#each data}}
                                        <tr>
                                        <th style=" width: 14%">{{id}}</th>
                                        <td>{{hoten}}</td>
                                        <td>{{ngaylap}}</td>
                                        <td>
                                                <a class="btn btn-danger" href="/XoaAccount/{{id}}" >Chỉnh sửa</a>
                                                <a class="btn btn-danger " href="/DeleteAccount/{{idDB}}" style="padding: 6px 30px;">   Xóa   </a>
                                            
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>