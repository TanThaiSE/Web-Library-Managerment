    <section id="binhLuanSach">
        <div class="container my-5">
            <form method="POST" action="http://localhost:5000/detailBook/{{idbook}}">
                <div class="form-group">
                    <input type="hidden" id="{{idbook}}" name="idDOfBook" value="{{idbook}}">
                    <label for="exampleFormControlTextarea1" class="display-4">Bình luận</label>
                    <textarea class="form-control" id="comment1" name="comment1"  rows="3" style="height:90px ;"></textarea>
                    <button type="submit" class="btn btn-primary my-3">Gửi nhận xét</button>
                </div>
            </form>
        </div>
    </section>





    <section id="TheLoaiCung Loai">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4>Các thể loại cùng loại</h4>
                </div>
            </div>
            <div class="row tLoaiCungLoai">
                {{#each bookSameCategory}}
                    <div class="col-6 my-3 col-sm-6 col-md-3 col-lg-3 col-xl-3">
                        <a href="/detailBook/{{idSach}}" class="boGachChan" onclick="takeAttribute(this)" > 
                            <div class="card">
                                <img class="img-thumbnail" src="/uploads{{image}}" alt="" style="width: 200px; height: 200px; overflow: hidden; margin: 0 auto;">     
                                <div class="card-body">
                                    <p class="card-title" id="tenSach">{{tensach }}</p>
                                    <p class="card-text" id="tenTg">{{tentacgia}}</p>
                                    <p class="loai" style="display: none;">{{theloai}}</p>
                                    <p class="mota" style="display: none;">{{mota}}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>
            <div class="d-flex justify-content-center ">
                <a href="/theloai{{linkSach}}" class="xemthem" >Xem thêm</a>
            </div>
        </div>
    </section>


